* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --bg-primary: #f8f9fa;
    --bg-secondary: #ffffff;
    --bg-card: #ffffff;
    --bg-card-hover: #f1f3f5;
    --text-primary: #212529;
    --text-secondary: #6c757d;
    --text-muted: #adb5bd;
    --accent-primary: #2563eb;
    --accent-secondary: #3b82f6;
    --accent-success: #10b981;
    --accent-warning: #f59e0b;
    --accent-danger: #ef4444;
    --border-color: #e9ecef;
    --border-hover: #dee2e6;
    --hover-bg: #f8f9fa;
    --shadow-sm: rgba(0, 0, 0, 0.05);
    --shadow-md: rgba(0, 0, 0, 0.1);
    --shadow-lg: rgba(0, 0, 0, 0.15);
}

/* Dark Theme */
[data-theme="dark"] {
    --bg-primary: #1a1a1a;
    --bg-secondary: #2d2d2d;
    --bg-card: #2d2d2d;
    --bg-card-hover: #3a3a3a;
    --text-primary: #e4e4e7;
    --text-secondary: #a1a1aa;
    --text-muted: #71717a;
    --accent-primary: #3b82f6;
    --accent-secondary: #60a5fa;
    --accent-success: #10b981;
    --accent-warning: #f59e0b;
    --accent-danger: #ef4444;
    --border-color: #3f3f46;
    --border-hover: #52525b;
    --hover-bg: #3a3a3a;
    --shadow-sm: rgba(0, 0, 0, 0.3);
    --shadow-md: rgba(0, 0, 0, 0.5);
    --shadow-lg: rgba(0, 0, 0, 0.7);
}

[data-theme="dark"] body {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    background-attachment: fixed;
    color: var(--text-primary);
    min-height: 100vh;
    padding: 20px;
    line-height: 1.6;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
}

header {
    text-align: center;
    padding: 40px 20px;
    margin-bottom: 40px;
    position: relative;
}

/* Theme Toggle Button */
.theme-toggle {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 50px;
    height: 50px;
    background: var(--bg-card);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 1000;
}

.theme-toggle:hover {
    background: var(--bg-card-hover);
    border-color: var(--accent-primary);
    transform: scale(1.05);
    box-shadow: 0 4px 12px var(--shadow-md);
}

.theme-toggle svg {
    transition: all 0.3s ease;
    color: var(--text-primary);
}

.theme-toggle .sun-icon {
    display: block;
}

.theme-toggle .moon-icon {
    display: none;
}

[data-theme="dark"] .theme-toggle .sun-icon {
    display: none;
}

[data-theme="dark"] .theme-toggle .moon-icon {
    display: block;
}

header h1 {
    font-size: 3.5rem;
    margin-bottom: 10px;
    letter-spacing: -1px;
    font-weight: 700;
}

header h1 .gradient-text {
    background: linear-gradient(135deg, #2563eb 0%, #3b82f6 50%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    letter-spacing: 0.5px;
    font-weight: 400;
}

/* Upload Section */
.upload-section {
    max-width: 800px;
    margin: 0 auto;
}

.upload-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 20px;
    padding: 50px;
    box-shadow: 
        0 10px 40px var(--shadow-sm),
        0 4px 12px var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.upload-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-primary);
    box-shadow: 
        0 20px 60px var(--shadow-md),
        0 0 0 1px var(--accent-primary);
}

.upload-card h2 {
    font-size: 2rem;
    margin-bottom: 30px;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.5px;
}

.form-group {
    margin-bottom: 25px;
}

.form-group label {
    display: block;
    margin-bottom: 12px;
    font-size: 1.05rem;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: 0.3px;
}

.file-input-wrapper {
    position: relative;
    overflow: hidden;
    display: inline-block;
    width: 100%;
    cursor: pointer;
}

.file-input-wrapper input[type="file"] {
    position: absolute;
    left: -9999px;
    opacity: 0;
    pointer-events: none;
}

.file-name {
    display: block;
    padding: 18px 24px;
    background: var(--bg-secondary);
    border: 2px dashed var(--border-color);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: var(--text-secondary);
    user-select: none;
    position: relative;
    font-weight: 500;
}

.file-name::before {
    content: "ðŸ“„ ";
    font-size: 1.2em;
}

.file-name:hover {
    border-color: var(--accent-primary);
    border-style: solid;
    background: var(--bg-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-md);
}

textarea {
    width: 100%;
    padding: 18px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    color: var(--text-primary);
    font-size: 1rem;
    font-family: inherit;
    resize: vertical;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    line-height: 1.6;
}

textarea:focus {
    outline: none;
    border-color: var(--accent-primary);
    background: var(--bg-secondary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.btn-primary, .btn-secondary {
    padding: 16px 40px;
    font-size: 1.1rem;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 12px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: #ffffff;
    width: 100%;
    justify-content: center;
    font-weight: 600;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(37, 99, 235, 0.4);
    background: linear-gradient(135deg, #1d4ed8, var(--accent-primary));
}

.btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--bg-primary);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-md);
}

.loader {
    display: none;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top: 3px solid white;
    width: 20px;
    height: 20px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Results Section */
.results-section {
    animation: fadeIn 0.6s ease-in;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 35px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

.results-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.5px;
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 32px;
    box-shadow: 0 4px 12px var(--shadow-sm);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.card:hover {
    border-color: var(--border-hover);
    box-shadow: 0 8px 24px var(--shadow-md);
    transform: translateY(-3px);
}

.card h3 {
    font-size: 1.5rem;
    margin-bottom: 24px;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.3px;
}

.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

/* Contact Details */
.contact-card .contact-item {
    padding: 14px 16px;
    border-bottom: 1px solid var(--border-color);
    transition: all 0.2s ease;
    border-radius: 8px;
}

.contact-card .contact-item:hover {
    background: var(--bg-primary);
    border-bottom-color: var(--border-hover);
    padding-left: 20px;
}

.contact-card .contact-item:last-child {
    border-bottom: none;
}

.contact-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 6px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
}

.contact-value {
    font-size: 1.15rem;
    color: var(--text-primary);
    font-weight: 500;
}

/* Fit Assessment */
.fit-card {
    text-align: center;
}

.fit-indicator {
    padding: 30px 0;
}

.fit-percentage {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 15px;
    letter-spacing: -2px;
}

.fit-status {
    font-size: 1.3rem;
    font-weight: 600;
    padding: 12px 28px;
    border-radius: 30px;
    display: inline-block;
    letter-spacing: 0.5px;
}

.fit-card.fit-yes .fit-percentage {
    color: var(--accent-success);
    font-weight: 700;
}

.fit-card.fit-yes .fit-status {
    background: rgba(16, 185, 129, 0.1);
    color: var(--accent-success);
    border: 2px solid var(--accent-success);
    font-weight: 600;
}

.fit-card.fit-no .fit-percentage {
    color: var(--accent-danger);
    font-weight: 700;
}

.fit-card.fit-no .fit-status {
    background: rgba(239, 68, 68, 0.1);
    color: var(--accent-danger);
    border: 2px solid var(--accent-danger);
    font-weight: 600;
}

/* Metrics Dashboard */
.metrics-dashboard {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.metric-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 28px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px var(--shadow-sm);
}

.metric-card:hover {
    border-color: var(--accent-primary);
    transform: scale(1.05) translateY(-5px);
    box-shadow: 0 12px 30px var(--shadow-md);
}

.metric-card h4 {
    font-size: 1.1rem;
    margin-bottom: 20px;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
}

.circular-progress {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto;
}

.circular-progress svg {
    transform: rotate(-90deg);
}

.circular-progress circle {
    fill: none;
    stroke-width: 8;
}

.circular-progress circle.bg {
    stroke: var(--border-color);
    stroke-width: 6;
}

.circular-progress circle.progress {
    stroke: var(--accent-primary);
    stroke-linecap: round;
    stroke-dasharray: 314;
    stroke-dashoffset: 314;
    stroke-width: 8;
    transition: stroke-dashoffset 1.2s cubic-bezier(0.4, 0, 0.2, 1), stroke 0.3s ease;
}

.circular-progress .percentage {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent-primary);
}

/* Details Grid */
.details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.experience-summary {
    padding: 20px;
    background: var(--bg-primary);
    border-radius: 12px;
    margin-bottom: 20px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.experience-summary:hover {
    border-color: var(--accent-primary);
    background: var(--bg-secondary);
    box-shadow: 0 4px 12px var(--shadow-sm);
}

.experience-years {
    font-size: 1.4rem;
    color: var(--accent-primary);
    font-weight: 700;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
}

.skills-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.skill-tag {
    display: inline-block;
    padding: 10px 18px;
    background: rgba(37, 99, 235, 0.1);
    border: 1px solid var(--accent-primary);
    border-radius: 24px;
    color: var(--accent-primary);
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.skill-tag:hover {
    background: var(--accent-primary);
    color: #ffffff;
    border-color: var(--accent-primary);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 6px 20px rgba(37, 99, 235, 0.3);
}

/* Responsibilities */
.responsibilities-card {
    margin-bottom: 30px;
}

#responsibilities {
    list-style: none;
}

#responsibilities li {
    padding: 15px 0 15px 35px;
    position: relative;
    line-height: 1.7;
    border-bottom: 1px solid var(--border-color);
    transition: all 0.2s ease;
    border-radius: 4px;
}

#responsibilities li:before {
    content: "â€¢";
    position: absolute;
    left: 10px;
    color: var(--accent-primary);
    font-size: 1.5rem;
}

#responsibilities li:last-child {
    border-bottom: none;
}

/* Technical Skills */
.technical-skills-card {
    margin-bottom: 30px;
}

.tech-category {
    margin-bottom: 24px;
    padding: 16px;
    background: var(--bg-primary);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.tech-category:hover {
    border-color: var(--accent-primary);
    background: var(--bg-secondary);
    box-shadow: 0 4px 12px var(--shadow-sm);
}

.tech-category-title {
    font-size: 1.15rem;
    color: var(--accent-primary);
    margin-bottom: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
}

.tech-skills-list {
    list-style: none;
    padding-left: 20px;
}

.tech-skills-list li {
    padding: 10px 0;
    position: relative;
    transition: all 0.2s ease;
    border-radius: 4px;
}

.tech-skills-list li:hover {
    padding-left: 8px;
    background: var(--bg-primary);
}

.tech-skills-list li:before {
    content: "â–¸";
    position: absolute;
    left: -15px;
    color: var(--accent-primary);
    font-size: 1.1rem;
}

/* Pros & Cons */
.pros-cons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 20px;
}

.advantages-card {
    border-left: 4px solid var(--accent-success);
    box-shadow: -4px 0 12px rgba(16, 185, 129, 0.1);
}

.disadvantages-card {
    border-left: 4px solid var(--accent-danger);
    box-shadow: -4px 0 12px rgba(239, 68, 68, 0.1);
}

#advantages, #disadvantages {
    list-style: none;
}

#advantages li, #disadvantages li {
    padding: 14px 0 14px 35px;
    position: relative;
    line-height: 1.7;
    transition: all 0.2s ease;
    border-radius: 4px;
}

#advantages li:hover,
#disadvantages li:hover {
    background: var(--hover-bg);
    padding-left: 40px;
}

#advantages li:before {
    content: "âœ“";
    position: absolute;
    left: 5px;
    color: var(--accent-success);
    font-weight: bold;
    font-size: 1.3rem;
}

#disadvantages li:before {
    content: "âœ—";
    position: absolute;
    left: 5px;
    color: var(--accent-danger);
    font-weight: bold;
    font-size: 1.3rem;
}

/* Error Message */
.error-message {
    background: rgba(239, 68, 68, 0.1);
    border: 2px solid var(--accent-danger);
    border-radius: 12px;
    padding: 18px 24px;
    margin: 20px 0;
    color: var(--accent-danger);
    text-align: center;
    font-weight: 500;
}

/* Responsive Design */
@media (max-width: 768px) {
    header h1 {
        font-size: 2rem;
    }
    
    .upload-card {
        padding: 25px;
    }
    
    .details-grid,
    .pros-cons-grid {
        grid-template-columns: 1fr;
    }
    
    .metrics-dashboard {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Additional Professional Enhancements */
@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.8;
    }
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.card {
    animation: slideIn 0.4s ease-out;
}

/* Scrollbar styling */
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: var(--bg-primary);
}

::-webkit-scrollbar-thumb {
    background: var(--accent-secondary);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--accent-primary);
}

/* Selection styling */
::selection {
    background: rgba(37, 99, 235, 0.2);
    color: var(--text-primary);
}

/* Enhanced hover effects for interactive elements */
.contact-item {
    transition: background 0.2s ease;
    border-radius: 4px;
    padding: 12px 10px !important;
}

.contact-item:hover {
    background: rgba(255, 255, 255, 0.03);
}

#responsibilities li,
#advantages li,
#disadvantages li {
    transition: all 0.2s ease;
    border-radius: 4px;
}

#responsibilities li:hover,
#advantages li:hover,
#disadvantages li:hover {
    background: rgba(255, 255, 255, 0.02);
    padding-left: 35px;
}

/* Glowing effect for primary elements */
.btn-primary {
    position: relative;
    overflow: hidden;
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn-primary:hover::before {
    width: 300px;
    height: 300px;
}

.btn-primary span {
    position: relative;
    z-index: 1;
}

/* Metric card numbers animation */
.metric-card:hover .percentage {
    transform: translate(-50%, -50%) scale(1.1);
    transition: transform 0.3s ease;
}

/* Enhanced borders with gradient effect */
.upload-card,
.card {
    position: relative;
}

.upload-card::after,
.card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

.upload-card:hover::after,
.card:hover::after {
    opacity: 1;
}

/* Loading state enhancement */
.loader {
    border: 3px solid rgba(255, 255, 255, 0.1);
    border-top: 3px solid white;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
}

/* Text shadow for headings */
h1, h2, h3 {
    text-shadow: none;
}

/* ========================================
   MULTI-FILE UPLOAD STYLES
   ======================================== */

.multi-file-input-wrapper {
    width: 100%;
}

.file-drop-zone {
    border: 2px dashed var(--border-color);
    border-radius: 16px;
    padding: 50px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    background: var(--bg-secondary);
}

.file-drop-zone.drag-over {
    border-color: var(--accent-primary);
    background: var(--bg-primary);
    border-style: solid;
    transform: scale(1.02);
}

.drop-zone-content svg {
    color: var(--text-muted);
    margin-bottom: 20px;
}

.drop-zone-content p {
    font-size: 1.2rem;
    color: var(--text-primary);
    margin-bottom: 10px;
    font-weight: 600;
}

.drop-zone-content span {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.file-preview-list {
    display: none;
    margin-top: 20px;
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 15px;
    background: var(--bg-secondary);
}

.file-preview-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 12px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    margin-bottom: 10px;
    transition: all 0.3s ease;
}

.file-preview-item:hover {
    border-color: var(--accent-primary);
    transform: translateX(5px);
}

.file-icon svg {
    color: var(--accent-primary);
}

.file-info {
    flex: 1;
}

.file-name {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 4px;
}

.file-size {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.file-remove {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    border-radius: 6px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.file-remove:hover {
    background: #fee;
    color: var(--accent-danger);
}

.file-remove svg {
    color: var(--text-secondary);
}

.file-remove:hover svg {
    color: var(--accent-danger);
}

/* ========================================
   RESULTS SUMMARY
   ======================================== */

.results-summary {
    margin: 20px 0;
}

.summary-stats {
    display: flex;
    gap: 30px;
    justify-content: center;
}

.stat {
    text-align: center;
    padding: 20px 30px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    min-width: 140px;
}

.stat-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    margin-bottom: 5px;
}

.stat-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* ========================================
   TABS NAVIGATION
   ======================================== */

.tabs-container {
    margin: 30px 0;
}

.tabs {
    display: flex;
    gap: 10px;
    border-bottom: 2px solid var(--border-color);
}

.tab-btn {
    padding: 15px 30px;
    background: none;
    border: none;
    border-bottom: 3px solid transparent;
    color: var(--text-secondary);
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
}

.tab-btn:hover {
    color: var(--accent-primary);
}

.tab-btn.active {
    color: var(--accent-primary);
    border-bottom-color: var(--accent-primary);
}

.tab-content {
    display: none;
    padding: 30px 0;
    animation: fadeIn 0.4s ease;
}

.tab-content.active {
    display: block;
}

/* ========================================
   RANKING CARDS
   ======================================== */

.ranking-cards {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.ranking-card {
    background: var(--bg-card);
    border: 2px solid var(--border-color);
    border-radius: 20px;
    padding: 30px;
    display: flex;
    gap: 30px;
    align-items: center;
    transition: all 0.4s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.ranking-card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 15px 40px var(--shadow-lg);
    border-color: var(--accent-primary);
}

.rank-gold {
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 223, 0, 0.05));
    border-color: #ffd700;
}

.rank-silver {
    background: linear-gradient(135deg, rgba(192, 192, 192, 0.1), rgba(200, 200, 200, 0.05));
    border-color: #c0c0c0;
}

.rank-bronze {
    background: linear-gradient(135deg, rgba(205, 127, 50, 0.1), rgba(205, 127, 50, 0.05));
    border-color: #cd7f32;
}

.rank-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    min-width: 80px;
}

.rank-number {
    font-size: 3rem;
    font-weight: 800;
    color: var(--accent-primary);
}

.rank-icon {
    font-size: 2.5rem;
}

.candidate-summary {
    flex: 1;
}

.candidate-summary h3 {
    font-size: 1.8rem;
    margin-bottom: 10px;
    color: var(--text-primary);
}

.profile-type {
    color: var(--text-secondary);
    margin-bottom: 20px;
    font-size: 1.1rem;
}

.fit-indicator {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
}

.fit-percentage-large {
    font-size: 3rem;
    font-weight: 800;
}

.fit-high .fit-percentage-large {
    color: var(--accent-success);
}

.fit-medium .fit-percentage-large {
    color: #f59e0b;
}

.fit-low .fit-percentage-large {
    color: var(--accent-danger);
}

.fit-status-text {
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.score-bars {
    margin: 20px 0;
}

.score-bar-container {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 12px;
}

.score-label {
    min-width: 100px;
    font-weight: 600;
    color: var(--text-secondary);
}

.score-bar {
    flex: 1;
    height: 10px;
    background: var(--bg-secondary);
    border-radius: 10px;
    overflow: hidden;
}

.score-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    transition: width 0.6s ease;
}

.score-value {
    min-width: 50px;
    text-align: right;
    font-weight: 600;
    color: var(--text-primary);
}

.recommendation-badge {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 15px;
}

.rec-recommended {
    background: rgba(16, 185, 129, 0.2);
    color: var(--accent-success);
    border: 2px solid var(--accent-success);
}

.rec-not-recommended {
    background: rgba(239, 68, 68, 0.2);
    color: var(--accent-danger);
    border: 2px solid var(--accent-danger);
}

.rec-conditional {
    background: rgba(245, 158, 11, 0.2);
    color: var(--accent-warning);
    border: 2px solid var(--accent-warning);
}

.rec-pending {
    background: rgba(100, 116, 139, 0.2);
    color: var(--text-secondary);
    border: 2px solid var(--text-secondary);
}

/* ========================================
   ALL CANDIDATES GRID
   ======================================== */

.candidates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 25px;
}

.candidate-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 25px;
    transition: all 0.3s ease;
    cursor: pointer;
}

.candidate-card:hover {
    border-color: var(--accent-primary);
    box-shadow: 0 10px 30px var(--shadow-md);
    transform: translateY(-5px);
}

.candidate-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.candidate-header h4 {
    font-size: 1.3rem;
    color: var(--text-primary);
    margin-bottom: 5px;
}

.candidate-email {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.fit-badge {
    font-size: 1.5rem;
    font-weight: 800;
    padding: 8px 15px;
    border-radius: 12px;
}

.fit-badge.fit-high {
    background: rgba(16, 185, 129, 0.2);
    color: var(--accent-success);
}

.fit-badge.fit-medium {
    background: rgba(245, 158, 11, 0.2);
    color: var(--accent-warning);
}

.fit-badge.fit-low {
    background: rgba(239, 68, 68, 0.2);
    color: var(--accent-danger);
}

.candidate-body {
    margin-bottom: 20px;
}

.candidate-info, .candidate-gap {
    margin-bottom: 12px;
    font-size: 0.95rem;
    line-height: 1.6;
}

.candidate-gap {
    padding: 10px;
    background: rgba(239, 68, 68, 0.1);
    border-left: 3px solid var(--accent-danger);
    border-radius: 6px;
}

.candidate-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.rank-indicator {
    font-weight: 700;
    color: var(--accent-primary);
}

.btn-details {
    padding: 8px 16px;
    background: var(--accent-primary);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-details:hover {
    background: var(--accent-secondary);
    transform: translateX(3px);
}

/* ========================================
   COMPARISON SECTION
   ======================================== */

.comparison-selector {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 30px;
    margin-bottom: 30px;
}

.comparison-selector h3 {
    margin-bottom: 20px;
}

.comparison-controls {
    display: flex;
    gap: 20px;
    align-items: flex-end;
}

.select-group {
    flex: 1;
}

.select-group label {
    display: block;
    margin-bottom: 10px;
    font-weight: 600;
    color: var(--text-primary);
}

.compare-select {
    width: 100%;
    padding: 12px;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background: var(--bg-secondary);
    color: var(--text-primary);
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.compare-select:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.comparison-grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 30px;
    margin-bottom: 40px;
}

.comparison-column {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 30px;
}

.comparison-vs {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    padding: 0;
}

.vs-badge {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 800;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.comparison-fit {
    text-align: center;
    padding: 20px;
    border-radius: 12px;
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 25px;
}

.comparison-details {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.detail-item {
    padding: 10px;
    background: var(--bg-secondary);
    border-radius: 8px;
}

.comparison-metrics {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 30px;
}

.comparison-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.comparison-table th,
.comparison-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
}

.comparison-table th {
    background: var(--bg-secondary);
    font-weight: 700;
    color: var(--text-primary);
}

.comparison-table td.winner {
    background: rgba(16, 185, 129, 0.1);
    font-weight: 700;
    color: var(--accent-success);
}

/* ========================================
   MODAL
   ======================================== */

.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    justify-content: center;
    align-items: center;
    padding: 20px;
}

.modal-content {
    background: var(--bg-card);
    border-radius: 20px;
    max-width: 1200px;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    animation: modalSlideIn 0.4s ease;
    border: 1px solid var(--border-color);
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-50px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.modal-close {
    position: sticky;
    top: 20px;
    right: 30px;
    float: right;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-secondary);
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    background: var(--bg-card);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}

.modal-close:hover {
    color: var(--accent-danger);
    transform: rotate(90deg);
    background: rgba(239, 68, 68, 0.1);
}

.modal-body {
    padding: 40px;
}

/* Modal Detail Sections */

.detail-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

.detail-title h2 {
    font-size: 2.5rem;
    margin-bottom: 10px;
}

.detail-filename {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 400;
}

.detail-fit {
    text-align: center;
    padding: 20px 30px;
    border-radius: 16px;
    min-width: 180px;
}

.detail-percentage {
    display: block;
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 5px;
}

.detail-status {
    display: block;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.detail-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.overview-item {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    border-left: 4px solid var(--accent-primary);
}

.gap-text {
    color: var(--accent-danger);
    font-weight: 600;
}

.detail-contact {
    background: var(--bg-secondary);
    padding: 25px;
    border-radius: 12px;
    margin-bottom: 30px;
}

.contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    margin-top: 15px;
}

.detail-scorecard {
    margin-bottom: 30px;
}

.scorecard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.scorecard-item {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    text-align: center;
    border: 1px solid var(--border-color);
}

.scorecard-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 10px;
    font-weight: 600;
}

.scorecard-value {
    font-size: 2rem;
    display: block;
    margin-bottom: 5px;
}

.scorecard-number {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-primary);
}

.detail-dimensions {
    margin-bottom: 30px;
}

.dimension-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 20px;
}

.dimension-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.dimension-header h4 {
    font-size: 1.3rem;
    color: var(--text-primary);
}

.dimension-meta {
    display: flex;
    gap: 15px;
    align-items: center;
}

.dimension-rating {
    font-size: 1.2rem;
}

.dimension-alignment {
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
}

.align-strong {
    background: rgba(16, 185, 129, 0.2);
    color: var(--accent-success);
}

.align-moderate {
    background: rgba(59, 130, 246, 0.2);
    color: var(--accent-primary);
}

.align-weak {
    background: rgba(245, 158, 11, 0.2);
    color: var(--accent-warning);
}

.align-low {
    background: rgba(239, 68, 68, 0.2);
    color: var(--accent-danger);
}

.dimension-details p {
    line-height: 1.8;
    margin-bottom: 15px;
    color: var(--text-primary);
}

.dimension-points {
    margin-top: 20px;
    padding: 15px;
    background: var(--bg-card);
    border-radius: 8px;
}

.dimension-points ul {
    margin-top: 10px;
    padding-left: 25px;
}

.dimension-points li {
    margin-bottom: 8px;
    line-height: 1.6;
}

.detail-strengths-weaknesses {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
    margin-bottom: 30px;
}

.detail-column {
    background: var(--bg-secondary);
    padding: 25px;
    border-radius: 12px;
}

.detail-column ul {
    padding-left: 25px;
    margin-top: 15px;
}

.detail-column li {
    margin-bottom: 12px;
    line-height: 1.6;
}

.detail-risks {
    background: rgba(245, 158, 11, 0.1);
    border: 1px solid var(--accent-warning);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 30px;
}

.risk-level {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: 700;
    margin: 15px 0;
}

.risk-low {
    background: rgba(16, 185, 129, 0.2);
    color: var(--accent-success);
}

.risk-moderate {
    background: rgba(245, 158, 11, 0.2);
    color: var(--accent-warning);
}

.risk-high {
    background: rgba(239, 68, 68, 0.2);
    color: var(--accent-danger);
}

.detail-risks ul {
    padding-left: 25px;
    margin-top: 15px;
}

.detail-risks li {
    margin-bottom: 10px;
    line-height: 1.6;
}

.detail-recommendation {
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    padding: 30px;
}

.recommendation-box {
    padding: 25px;
    border-radius: 12px;
    margin: 20px 0;
}

.recommendation-decision {
    font-size: 1.8rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 15px;
}

.recommendation-box p {
    font-size: 1.1rem;
    line-height: 1.8;
}

.ideal-roles {
    margin-top: 20px;
    padding: 20px;
    background: var(--bg-card);
    border-radius: 8px;
}

.ideal-roles ul {
    margin-top: 10px;
    padding-left: 25px;
}

.ideal-roles li {
    margin-bottom: 8px;
}

/* ========================================
   RESPONSIVE DESIGN
   ======================================== */

@media (max-width: 768px) {
    header h1 {
        font-size: 2.5rem;
    }
    
    .ranking-card {
        flex-direction: column;
        text-align: center;
    }
    
    .comparison-grid {
        grid-template-columns: 1fr;
    }
    
    .comparison-vs {
        order: 2;
    }
    
    .detail-strengths-weaknesses {
        grid-template-columns: 1fr;
    }
    
    .comparison-controls {
        flex-direction: column;
    }
    
    .candidates-grid {
        grid-template-columns: 1fr;
    }
}

.no-results {
    text-align: center;
    padding: 60px;
    color: var(--text-secondary);
    font-size: 1.2rem;
}

.badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 700;
}

/* ========================================
   RECOMMENDATION PANEL (COMPARISON)
   ======================================== */

.recommendation-panel {
    background: var(--bg-card);
    border: 2px solid var(--border-color);
    border-radius: 20px;
    padding: 35px;
    margin-top: 40px;
    box-shadow: 0 10px 30px var(--shadow-md);
    animation: slideUp 0.5s ease;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.recommendation-panel.strong {
    border-color: var(--accent-success);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.05), rgba(16, 185, 129, 0.02));
}

.recommendation-panel.moderate {
    border-color: var(--accent-primary);
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(37, 99, 235, 0.02));
}

.recommendation-panel.slight {
    border-color: var(--accent-warning);
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.05), rgba(245, 158, 11, 0.02));
}

.recommendation-panel.tie {
    border-color: var(--text-secondary);
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.05), rgba(100, 116, 139, 0.02));
}

.recommendation-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

.recommendation-header h3 {
    font-size: 1.8rem;
    color: var(--text-primary);
    margin: 0;
}

.recommendation-strength {
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.recommendation-strength.strong {
    background: rgba(16, 185, 129, 0.2);
    color: var(--accent-success);
    border: 2px solid var(--accent-success);
}

.recommendation-strength.moderate {
    background: rgba(37, 99, 235, 0.2);
    color: var(--accent-primary);
    border: 2px solid var(--accent-primary);
}

.recommendation-strength.slight {
    background: rgba(245, 158, 11, 0.2);
    color: var(--accent-warning);
    border: 2px solid var(--accent-warning);
}

.recommendation-body {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.recommendation-result {
    text-align: center;
    padding: 30px;
    background: var(--bg-secondary);
    border-radius: 16px;
    border: 1px solid var(--border-color);
}

.recommendation-icon {
    font-size: 4rem;
    margin-bottom: 15px;
    animation: bounce 1s ease;
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.recommendation-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 10px;
}

.recommendation-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    font-weight: 600;
}

.recommendation-reasons {
    background: var(--bg-secondary);
    padding: 25px;
    border-radius: 12px;
    border-left: 4px solid var(--accent-primary);
}

.recommendation-reasons strong {
    display: block;
    font-size: 1.1rem;
    margin-bottom: 15px;
    color: var(--text-primary);
}

.recommendation-reasons ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.recommendation-reasons li {
    padding: 12px 0;
    padding-left: 30px;
    position: relative;
    font-size: 1rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border-color);
}

.recommendation-reasons li:last-child {
    border-bottom: none;
}

.recommendation-reasons li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--accent-success);
    font-weight: 800;
    font-size: 1.2rem;
}

.recommendation-comparison-summary {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

.summary-column {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    border: 2px solid var(--border-color);
    text-align: center;
}

.summary-column.better {
    border-color: var(--accent-success);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(16, 185, 129, 0.2);
}

.summary-label {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 15px;
    color: var(--text-primary);
}

.summary-column.better .summary-label {
    color: var(--accent-success);
}

.summary-stats {
    display: flex;
    flex-direction: column;
    gap: 10px;
    font-size: 1rem;
    color: var(--text-secondary);
}

.summary-stats div {
    padding: 8px;
    background: var(--bg-card);
    border-radius: 6px;
    font-weight: 600;
}

.summary-column.better .summary-stats div {
    background: rgba(16, 185, 129, 0.1);
    color: var(--text-primary);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .recommendation-comparison-summary {
        grid-template-columns: 1fr;
    }
    
    .summary-column.better {
        transform: scale(1);
    }
    
    .recommendation-title {
        font-size: 1.5rem;
    }
}
